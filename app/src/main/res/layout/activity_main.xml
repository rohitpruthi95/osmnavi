<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingBottom="5sp"
    android:paddingTop="5sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.MainActivity">

    <fragment
        android:id="@+id/ending_destination_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />

    <ImageButton
        android:id="@+id/btnSpeak2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="promptSpeechInputView"
        android:src="@drawable/ic_speaker_dark" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:background="#000000"
        android:id="@+id/button8"
        android:onClick="onStartButton" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:text="Add Text"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:background="#000000"
        android:id="@+id/button"
        android:onClick="changeLayout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:text="Saved routes"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#000000"
        android:id="@+id/button_save"
        android:onClick="onSaveButton" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Show DB"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:background="#000000"
            android:id="@+id/button4"
            android:onClick="showMessage1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Export DB"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:background="#000000"
            android:id="@+id/button5"
            android:onClick="exportDb" />

    </TableRow>


    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/editText2"-->
        <!--android:layout_marginTop="59dp"-->
        <!--android:text="lat, long" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show Route Info"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#000000"
            android:id="@+id/button9"
            android:onClick="showDb" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Special Pt."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#000000"
            android:id="@+id/button10"
            android:onClick="insertSpecial" />
    </TableRow>
</LinearLayout>

